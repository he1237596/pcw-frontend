{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES5",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      // "@/*": ["*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@constants/*": ["constants/*"],
      "@locales/*": ["locales/*"],
      "@pages/*": ["pages/*"],
      "@router/*": ["router/*"],
      "@services/*": ["services/*"],
      "@api/*": ["api/*"],
      "@context/*": ["context/*"],
      "@hooks/*": ["hooks/*"],
      "@layouts/*": ["layouts/*"]
    }
  },
  "include": ["src"]
}
