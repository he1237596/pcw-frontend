{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES5",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    // "typeRoots": [
    //   "./node_modules/@types",   // 默认的类型定义文件路径
    //   "./src/types"
    // ],
    "paths": {
      // "@/*": ["*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@constants/*": ["constants/*"],
      "@locales/*": ["locales/*"],
      "@pages/*": ["pages/*"],
      "@router/*": ["router/*"],
      "@services/*": ["services/*"],
      "@api/*": ["api/*"],
      "@context/*": ["context/*"],
      "@hooks/*": ["hooks/*"],
      "@layouts/*": ["layouts/*"],
      "@store/*": ["store/*"]
    }
  },
  "include": ["src/**/*"]
}
